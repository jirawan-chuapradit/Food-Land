<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/register_bg">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_white" />
        </RelativeLayout></ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="60dp"
                    android:clickable="true"
                    android:background="@drawable/ic_back_icon" />



                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="124dp"
                    android:layout_marginRight="52dp"
                    android:layout_weight="1"
                    android:text="รายการจองร้านของคุณ"
                    android:textStyle="bold"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="30sp"
                    android:text="_"
                    android:textScaleX="18"
                    android:textSize="36dp"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textStyle="bold" />

            </RelativeLayout></LinearLayout></ScrollView>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="120dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/history_pending_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false" />

        </LinearLayout></ScrollView>
</android.support.constraint.ConstraintLayout>