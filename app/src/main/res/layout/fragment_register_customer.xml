<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_bg"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">
            <TextView
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_marginLeft="125dp"
                android:layout_marginRight="118dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ลงทะเบียน"
                android:textStyle="bold"
                android:textColor="@color/system_font_color"
                android:textSize="35dp" />
            <Button
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_marginLeft="260dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/regis_user_black" />
            <Button
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="339dp"
                android:background="@drawable/ic_back_icon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/re_font"
                android:text="-"
                android:textColor="@color/system_font_color"
                android:textScaleX="13"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ลูกค้า"
                android:textColor="@color/system_font_color"
                android:textSize="22dp" />
        </RelativeLayout>


        <TextView
            android:layout_width="96dp"
            android:layout_height="24dp"
            android:layout_gravity="left"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="239dp"
            android:layout_weight="1"
            android:fontFamily="@font/re_font"
            android:text="ชื่อจริง :"
            android:textColor="@color/system_font_color"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/regis_Fname_cus"
            android:padding="10dp"
            android:layout_width="290dp"
            android:layout_height="39dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/fill_shape_input"
            android:inputType="text"
            android:textColor="@color/user_font_color"
            android:textSize="20dp"
            android:fontFamily="@font/re_font"
            android:layout_gravity="center"/>

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="นามสกุล :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

        <EditText
            android:id="@+id/regis_Lname_cus"
            android:layout_width="290dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/user_font_color"
            android:textSize="20dp"
            android:background="@drawable/fill_shape_input"
            android:fontFamily="@font/re_font"/>


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="อีเมล :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_mail_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:padding="10dp"/>


        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="44dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="เบอร์โทรศัพท์ :"
            android:textColor="@color/system_font_color"
            android:fontFamily="@font/re_font"
            android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_phone_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:padding="10dp"/>


            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="รหัสผ่าน :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_pass_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
               android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="ยืนยันรหัสผ่าน :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_rePass_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
               android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:padding="10dp"/>

        <Button
            android:id="@+id/regis_cus_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="81dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_login_btn"
            android:text="ลงทะเบียน"
            android:textColor="@color/white"
            android:textSize="37dp"
            android:fontFamily="@font/re_font"
            android:textStyle="bold" />
       </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
