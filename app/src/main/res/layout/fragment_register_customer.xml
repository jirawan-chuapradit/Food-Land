<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorApp"
        android:padding="10dp"
        android:text="ลงทะเบียน"
        android:textAllCaps="true"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="56dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <EditText
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_loginbox"
                android:id="@+id/registerName"

                android:inputType="text"
                android:hint="ชื่อจริง - นามสกุล"
                android:ems="10"
                />


            <EditText
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_loginbox"
                android:id="@+id/registerEmail"
                android:inputType="text"
                android:hint="อีเมล"
                android:ems="10" />

            <EditText
                android:background="@drawable/shape_loginbox"
                android:id="@+id/registerBirth"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:hint="เบอร์โทร"
                android:ems="10"
                />



            <EditText
                android:background="@drawable/shape_loginbox"
                android:id="@+id/registerPassword"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:hint="รหัสผ่าน"
                android:ems="10" />



            <EditText
                android:background="@drawable/shape_loginbox"
                android:id="@+id/registerRePassword"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:hint="ยืนยันรหัสผ่าน"
                android:ems="10" />








            <Button
                android:id="@+id/registerBtn"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_btn"
                android:text="สมัครสมาชิก"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <Button
                android:id="@+id/back_login_btn"
                android:layout_marginTop="10dp"
                android:text="BACK TO LOGIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_btn"
                />



        </LinearLayout>


    </ScrollView>




</android.support.constraint.ConstraintLayout>