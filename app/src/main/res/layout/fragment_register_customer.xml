<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_bg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="124dp"
            android:layout_weight="1"
            android:text="ลงทะเบียน"
            android:textColor="@color/black"
            android:textSize="53dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="ลูกค้า"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="239dp"
            android:layout_weight="1"
            android:text="ชื่อจริง :"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/regis_Fname_cus"
            android:layout_width="290dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/fill_shape_input"
            android:inputType="text"
            android:layout_gravity="center"/>

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="นามสกุล :"
                android:textColor="@color/black"
                android:textSize="20dp" />

        <EditText
            android:id="@+id/regis_Lname_cus"
            android:layout_width="290dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/fill_shape_input" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="อีเมล :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_mail_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center" />


        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="44dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="เบอร์โทรศัพท์ :"
            android:textColor="@color/black"
            android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_phone_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="รหัสผ่าน :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_pass_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/fill_shape_input"
                android:inputType="textPassword"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="ยืนยันรหัสผ่าน :"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/regis_rePass_cus"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/fill_shape_input"
                android:layout_gravity="center"
                android:inputType="textPassword" />

        <Button
            android:id="@+id/regis_cus_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@drawable/shape_login_btn"
            android:text="ลงทะเบียน"
            android:textColor="@color/white"
            android:textSize="37px"
            android:textStyle="bold" />

    </LinearLayout>

    </ScrollView>





</android.support.constraint.ConstraintLayout>
