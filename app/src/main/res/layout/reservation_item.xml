<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/reser_item_profile_image"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/reser_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Bonchon"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/reser_item_profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reser_item_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="012-3456789"
        app:layout_constraintStart_toEndOf="@+id/reser_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/reser_item_name" />

    <TextView
        android:id="@+id/reser_item_date"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="7/11/2018"
        app:layout_constraintStart_toEndOf="@+id/reser_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/reser_item_tel" />

    <TextView
        android:id="@+id/reser_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="17:00"
        app:layout_constraintStart_toEndOf="@+id/reser_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/reser_item_date" />

    <TextView
        android:id="@+id/reser_item_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/reser_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/reser_item_time" />
</android.support.constraint.ConstraintLayout>