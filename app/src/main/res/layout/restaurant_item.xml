<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shadow_shape"
    android:elevation="4dp">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/res_item_profile_image"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/re_font"
        android:text="Bonchon"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/location"
        android:fontFamily="@font/re_font"
        android:text="siam center"
        android:textColor="#000"

        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_name" />

    <TextView
        android:id="@+id/res_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_restaurant_black_24dp"
        android:fontFamily="@font/re_font"
        android:text="Family"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_location" />

    <TextView
        android:id="@+id/res_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/clock"
        android:fontFamily="@font/re_font"
        android:text="10:00 - 21:00"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_type" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="54dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res_item_type"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_back_icon" />

</android.support.constraint.ConstraintLayout>