<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/res_item_profile_image"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/res_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Bonchon"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="siam center"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_name" />

    <TextView
        android:id="@+id/res_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Family"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_location" />

    <TextView
        android:id="@+id/res_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="10:00 - 21:00"
        app:layout_constraintStart_toEndOf="@+id/res_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/res_item_type" />
</android.support.constraint.ConstraintLayout>