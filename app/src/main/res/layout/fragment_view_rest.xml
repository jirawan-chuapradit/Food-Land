<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/register_bg"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">



            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"

                android:src="@drawable/logo_white"

                />


        </RelativeLayout></ScrollView>



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/log_out_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="140dp"
                    android:background="@drawable/ic_log_out" />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="ข้อมูลส่วนตัว"
                    android:textStyle="bold"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textSize="35dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="_"
                        android:textScaleX="13"
                        android:textSize="30dp"
                        android:textColor="@color/system_font_color"
                        android:fontFamily="@font/re_font"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Button
                    android:id="@+id/update_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_n_edit" />
            </RelativeLayout>


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อ - นามสกุล :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restName"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="อีเมลล์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restEmail"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restPhone"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="รายละเอียด :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restDesc"
                android:layout_width="290dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />




        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>