<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_bg"/>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="254dp"
                android:layout_height="140dp"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="61dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo_white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/log_out_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="140dp"
                    android:background="@drawable/ic_log_out" />

                <Button
                    android:id="@+id/update_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ic_n_edit" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_marginLeft="125dp"
                android:layout_marginRight="118dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ข้อมูลส่วนตัว"
                android:textColor="@color/system_font_color"
                android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/re_font"
                    android:text="-"
                    android:textColor="@color/system_font_color"
                    android:textScaleX="13"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อ - นามสกุล :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restName"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="อีเมลล์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restEmail"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restPhone"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="รายละเอียด :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restDesc"
                android:layout_width="290dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>