<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/register_bg"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_white" />
        </RelativeLayout></ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="124dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="ข้อมูลส่วนตัว"
                    android:textStyle="bold"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textSize="35dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="_"
                        android:textScaleX="13"
                        android:textSize="30dp"
                        android:textColor="@color/system_font_color"
                        android:fontFamily="@font/re_font"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/restProfileImage"
                android:layout_width="120dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/upload_profile" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อ - นามสกุล :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fName"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="อีเมลล์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restEmail"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restPhone"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="รายละเอียด :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restDesc"
                android:layout_width="290dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อร้าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restName"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="สถานที่ตั้ง :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restLocate"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/image_maps"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/maps" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาเปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/restOpen"
                    android:layout_width="220dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/restClose"
                    android:layout_width="220dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ประเภทของร้าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restType"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">
                <Button
                    android:id="@+id/update_password_btn"
                    android:layout_width="134dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="21dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_change_password"/>

                <Button
                    android:id="@+id/log_out_btn"
                    android:layout_width="134dp"
                    android:layout_height="54dp"
                    android:layout_marginRight="42dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_logout"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>
        </LinearLayout></ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">
        <Button
            android:id="@+id/update_profile"
            android:layout_marginTop="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/edit_profile" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>