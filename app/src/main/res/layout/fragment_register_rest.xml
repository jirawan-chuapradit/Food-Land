<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </RelativeLayout>
    </ScrollView>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/view_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:gravity="center"
                    android:text="ลงทะเบียน"
                    android:textColor="@color/system_font_color"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_underline"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@android:color/black"
                    android:fontFamily="@font/re_font"
                    android:gravity="center"
                    android:textColor="@color/system_font_color"
                    android:textScaleX="13"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/view_register" />

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="19dp"
                    android:background="@drawable/ic_back_icon"
                    app:layout_constraintRight_toLeftOf="@id/view_change_password" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="77dp"
                    app:layout_constraintLeft_toRightOf="@+id/view_underline"
                    app:layout_constraintTop_toBottomOf="@+id/view_cus_name"
                    android:background="@drawable/regis_restaurant_black" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:gravity="center"
                    android:text="ร้านค้า"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_register"
                    android:textColor="@color/system_font_color"
                    android:textSize="22dp" />
            </android.support.constraint.ConstraintLayout>


            <ImageView
                android:id="@+id/restProfileImage"
                android:layout_width="120dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/upload_profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อจริง :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="นามสกุล :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="อีเมล :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="รายละเอียด :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerRestDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="รหัสผ่าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ยืนยันรหัสผ่าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อร้าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registeRestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="สถานที่ตั้ง :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registeRestLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/regis_rest_map"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/view_time_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาเปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp"
                    app:layout_constraintRight_toLeftOf="@id/view_time_close"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/view_time_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="110dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/view_time_open"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/registeRestOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="180dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp"
                    app:layout_constraintRight_toLeftOf="@id/updateRestClose"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_time_open"/>

                <EditText
                    android:id="@+id/registeRestClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_time_close"/>

            </android.support.constraint.ConstraintLayout>




            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/re_font"
            android:text="ประเภทของร้าน :"
            android:textColor="@color/system_font_color"
            android:textSize="20dp" />

            <EditText
                android:id="@+id/registeRestType"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="34dp"
                android:background="@drawable/shape_login_btn"
                android:fontFamily="@font/re_font"
                android:text="ลงทะเบียน"
                android:textColor="@color/white"
                android:textSize="37dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
