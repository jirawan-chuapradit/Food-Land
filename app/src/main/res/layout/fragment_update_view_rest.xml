<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/register_bg"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">



            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"

                android:src="@drawable/logo_white"

                />


        </RelativeLayout></ScrollView>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="ข้อมูลส่วนตัว"
                    android:id="@+id/text"
                    android:textStyle="bold"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textSize="35dp" />



                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="50dp">

                    <Button
                        android:id="@+id/back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/ic_back_icon"
                        />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:text="_"
                    android:textScaleX="20"
                    android:textSize="25sp"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/updateProfileImage"
                android:layout_width="120dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/upload_profile" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="232dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อจริง :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/update_rest_fname"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:inputType="text"
                android:layout_gravity="center"
                android:fontFamily="@font/re_font"
                android:padding="10dp"/>

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="นามสกุล :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/update_rest_lname"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"/>

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="อีเมล :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/restEmail"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="เบอร์โทรศัพท์ :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/update_rest_phone"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="รายละเอียด :"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/update_rest_desc"
                android:layout_width="290dp"
                android:layout_height="122dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="@color/user_font_color"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="10dp"/>


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ชื่อร้าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/updateRestName"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="สถานที่ตั้ง :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/updateRestLocate"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_maps"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/maps" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาเปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/re_font"
                    android:text="เวลาปิด :"
                    android:textColor="@color/system_font_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/updateRestOpen"
                    android:layout_width="220dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/updateRestClose"
                    android:layout_width="220dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill_shape_input"
                    android:fontFamily="@font/re_font"
                    android:padding="10dp"
                    android:textColor="@color/user_font_color"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/re_font"
                android:text="ประเภทของร้าน :"
                android:textColor="@color/system_font_color"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/updateRestType"
                android:layout_width="290dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fill_shape_input"
                android:fontFamily="@font/re_font"
                android:padding="10dp"
                android:textColor="@color/user_font_color"
                android:textSize="20dp" />


            <Button
                android:id="@+id/saveBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_login_btn"
                android:fontFamily="@font/re_font"
                android:text="ยืนยันการแก้ไข"
                android:textColor="@color/white"
                android:textSize="37dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center"></LinearLayout>

        </LinearLayout>



    </ScrollView>




</android.support.constraint.ConstraintLayout>