<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_white" />

        </RelativeLayout></ScrollView>



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ข้อมูลส่วนตัว"
                android:textStyle="bold"
                android:textColor="@color/system_font_color"
                android:fontFamily="@font/re_font"
                android:textSize="35dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="_"
                    android:textScaleX="13"
                    android:textSize="30dp"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textStyle="bold" />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    >
                    <Button
                        android:id="@+id/update_profile"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="19dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/edit_profile" />
                </RelativeLayout>

            </RelativeLayout>



            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/re_font"
                android:layout_marginLeft="20dp"
                android:text="ชื่อ - นามสกุล : "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusName"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_search"
                android:fontFamily="@font/re_font"
                android:hint="ดาวิกา  โฮเน่"
                android:textColor="@color/user_font_color"
                android:padding="10dp"
                android:textSize="20dp" />




            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/re_font"
                android:text="E-mail :  "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusEmail"
                android:textColor="@color/user_font_color"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/re_font"
                android:hint="ab@gmail.com"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_weight="1"
                />


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :  "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusPhone"
                android:textColor="@color/user_font_color"
                android:textSize="20dp"
                android:fontFamily="@font/re_font"
                android:layout_marginLeft="20dp"
                android:hint=" 085- XXX - XXXX"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:padding="10dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">
                <Button
                    android:id="@+id/update_password_btn"
                    android:layout_width="134dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="21dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_change_password"/>

                <Button
                    android:id="@+id/log_out_btn"
                    android:layout_width="134dp"
                    android:layout_height="54dp"
                    android:layout_marginRight="42dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_logout"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="10dp">
            </LinearLayout>


        </LinearLayout></ScrollView>






</android.support.constraint.ConstraintLayout>
