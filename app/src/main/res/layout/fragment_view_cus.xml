<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:background="@drawable/register_bg"/>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_white"

                />


        </RelativeLayout></ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="111dp"
                    android:layout_marginTop="124dp"
                    android:layout_marginRight="52dp"
                    android:layout_weight="1"
                    android:text="ข้อมูลส่วนตัว"
                    android:textStyle="bold"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="105dp"
                    android:text="_"
                    android:textScaleX="13"
                    android:textSize="30dp"
                    android:textColor="@color/system_font_color"
                    android:fontFamily="@font/re_font"
                    android:textStyle="bold" />

            </RelativeLayout></LinearLayout></ScrollView>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/re_font"
                android:layout_marginLeft="20dp"
                android:text="ชื่อ - นามสกุล : "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusName"
                android:layout_marginLeft="20dp"

                android:textColor="#ffff"
                android:textSize="20dp"
                android:hint="ดาวิกา  โฮเน่"
                android:fontFamily="@font/re_font"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                />




            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/re_font"
                android:text="E-mail :  "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusEmail"
                android:textColor="#ffff"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/re_font"
                android:hint="ab@gmail.com"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                />


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:fontFamily="@font/re_font"
                android:text="เบอร์โทรศัพท์ :  "
                android:textColor="@color/system_font_color"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cusPhone"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:fontFamily="@font/re_font"
                android:layout_marginLeft="20dp"
                android:hint=" 085- XXX - XXXX"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                ></LinearLayout>


        </LinearLayout></ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        >
    <Button
        android:id="@+id/update_profile"
        android:layout_marginTop="150dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="350dp"
        android:background="@drawable/edit_profile" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        >
    <Button
        android:id="@+id/log_out_btn"
        android:layout_marginTop="150dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/singout"
        />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
